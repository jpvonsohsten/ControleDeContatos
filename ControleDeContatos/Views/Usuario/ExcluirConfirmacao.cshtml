@model UsuarioModel

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<div class="text-center">

    <h3 class="display-4">Deseja excluir @Model.Nome dos usuários?</h3>

</div>

<a class="btn btn-primary text-white btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger text-white btn-block" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>